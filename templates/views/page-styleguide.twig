      {% set colors = ['primary', 'secondary', 'ternary'] %}
      {% set shades = ['-darkest', '-darker', '-dark', '', '-light', '-lighter', '-lightest'] %}

      {% for color in colors %}
        <section class="wrapper wrapper--padding bg-{{ color }} color-white">
          <div class="container">
            <h3>Color: {{ color }}</h3>
            <div class="row row--auto-size">
              {% for shade in shades %}
